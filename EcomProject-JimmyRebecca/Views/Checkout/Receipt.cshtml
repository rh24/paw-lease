@using EcomProject_JimmyRebecca.Models
@using System.Linq
@model EcomProject_JimmyRebecca.Models.ViewModels.Order
@{
    ViewData["Title"] = "Receipt";
}
@if (Model != null)
{
    <h2>Receipt for Order #@Model.CartID</h2>

    foreach (var li in Model.OrderItems)
    {
        <div>
            <h5>
                @li.Product.ProductName
            </h5>
            <p>Price: @li.Product.SuggestedDonation</p>
            <p>Quantity: @Html.DisplayFor(modelItem => li.Quantity) </p>
        </div>
    }

    <h4>Total: @ViewBag.CartTotal</h4>
    <div>
        <h5>Billed to:</h5>
        <p>@Model.FirstName @Model.LastName</p>
        <p>@Model.CreditCardNumber</p>
        <p>@Model.Address</p>
        <p>@Model.PhoneNumber</p>
    </div>

    <a asp-action="OrderProcessed" asp-route-cartId="@Model.CartID">Complete Purr-chase</a>
}
