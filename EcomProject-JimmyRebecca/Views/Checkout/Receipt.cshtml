@using EcomProject_JimmyRebecca.Models
@using System.Linq
@model IEnumerable<EcomProject_JimmyRebecca.Models.LineItem>
@{
    ViewData["Title"] = "Receipt";
}
@if (Model != null)
{
    <h2>Receipt for Order #@Model.First().CartID</h2>

    foreach (var li in Model)
    {
        <div>
            <h5>
                @li.Product.ProductName
            </h5>
            <p>Price: @li.Product.SuggestedDonation</p>
            <p>Quantity: @Html.DisplayFor(modelItem => li.Quantity) </p>
        </div>
    }

    <h4>Total: @ViewBag.CartTotal</h4>

    <a asp-action="OrderProcessed" asp-route-cartId="@Model.First().CartID">Complete Order</a>
}
