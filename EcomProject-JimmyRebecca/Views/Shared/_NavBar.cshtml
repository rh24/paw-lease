@using Microsoft.AspNetCore.Identity
@using EcomProject_JimmyRebecca.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <ul class="nav justify-content-end">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @User.Claims.First(name => name.Type == "FullName").Value
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-action="../Account/Register">Edit Profile</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Log Out</a>
                </div>
            </li>

        }
        else
        {
            <li class="nav-item">
                <a class="nav-link active" asp-action="../Account/Login">You're not logged in</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link active" asp-action="../Products/Index">Products</a>
        </li>
        @if (!SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link active" asp-action="../Account/Register">Register</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link active" asp-action="../Admin/Index">Admin Console</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-action="Active" asp-controller="Carts" asp-route-userId="@UserManager.GetUserId(User)">My Shopping Cart</a>
        </li>
        <li class="nav-item">
            <form asp-action="Logout" asp-controller="Account" method="post">
                <button type="submit">Static Log out</button>
            </form>
        </li>
    </ul>
</nav>
